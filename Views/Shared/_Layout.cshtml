<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="...">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/GlobalStyles.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet"/>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav>
            <div class="funky-gradient"></div>
          <ul>
            <li><a href="/Home"><i class="uil uil-home"></i><span>Home</span></a></li>
            <li><a href="/Drivers"><i class="uil uil-streering"></i><span>Drivers</span></a></li>
            <li><a href="#"><i class="uil uil-cloud track"></i><span>Tracks</span></a></li>
            <li><a href="#"><i class="uil uil-users-alt"></i><span>Teams</span></a></li>
            <li><a href="#"><i class="uil uil-calender"></i><span>Seasons</span></a></li>
            <li><a href="#"><i class="uil uil-info-circle"></i><span>About</span></a></li>
          </ul>
        </nav>
    </header>
    <div class="content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
